<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.android.musicplayerapp.MainActivity">



    <android.support.v7.widget.CardView
        android:id="@+id/text_container"
        android:layout_width="4000dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="60dp"
        android:layout_centerInParent="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bg_white_rounded_rect"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitXY"
                android:alpha=".6"/>

            <ImageView
                android:id="@+id/image_playlist_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:id="@+id/text_playlist_category"
                android:clickable="true"
                style="@style/TextCardView"/>

        </RelativeLayout>



    </android.support.v7.widget.CardView>




</RelativeLayout>